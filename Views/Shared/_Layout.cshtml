<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstaDev_s</title>
    <link rel="stylesheet" href="~/css/perfil.css">
    <link rel="stylesheet" href="~/css/cadastro.css" />
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
    <link rel="stylesheet" href="~/css/EdicaoDePerfil.css" />
    <link rel="stylesheet" href="~/css/Feed.css"/>
</head>
<body>

    
     <header>
        <div class="content flex-center-bt">
            <a href=""><img src="~/imgPerfil/Logo.svg" alt="imagem logo InstaDev"></a>
            <form class="pesquisa" action="">
                <input class="input"  placeholder="Pesquisar" type="text">
            </form>
            <nav>
                <ul class="links flex-center-bt">
                    @* <li><a asp-area="" asp-action="Index" asp-controller="Usuario">Cadastrar</a></li> *@
                    <li><a href=""><img src="~/imgPerfil/Casa.svg" alt="imagem de uma casa"></a></li>
                    <li><a href=""><img src="~/imgPerfil/Aviao.svg" alt="imagem de um avião"></a></li>
                    <li><a href=""><img src="~/imgPerfil/Compasso.svg" alt="imagem de um compasso"></a></li>
                    <li><a href=""><img src="~/imgPerfil/Coracao.svg" alt="imagem de um coração"></a></li>
                </ul>
            </nav>
        </div>
    </header>  
        


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
